<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InputDataBarang">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:theme="@style/Toolbar"
        android:gravity="center"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/toolbar_text"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Input Data Barang"
            android:maxLines="1"
            android:ellipsize="end"
            android:fontFamily="@font/shadeerah"
            android:layout_gravity="center"/>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="25dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/write" />


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:hintEnabled="false">

            <EditText
                android:id="@+id/et_namaBarang"
                style="@style/MyEditText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Nama Barang"
                android:fontFamily="@font/shadeerah"
                android:inputType="textCapWords" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:hintEnabled="false"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/et_jumlahBarang"
                style="@style/MyEditText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fontFamily="@font/shadeerah"
                android:hint="Jumlah Barang"
                android:inputType="textCapWords" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:hintEnabled="false"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/et_Pemasok"
                style="@style/MyEditText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Pemasok"
                android:fontFamily="@font/shadeerah"
                android:inputType="textCapWords" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/et_tanggal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:hintEnabled="false"
            app:passwordToggleEnabled="true">

            <TextView
                android:id="@+id/tv_date"
                style="@style/MyEditText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fontFamily="@font/shadeerah"
                android:hint="Tanggal"
                android:inputType="textCapWords" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/bt_submit"
            style="@style/MyBtDefaultGreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:fontFamily="@font/shadeerah"
            android:textSize="14sp"
            android:layout_marginTop="24dp"/>
    </LinearLayout>

</LinearLayout>